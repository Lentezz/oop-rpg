<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.Light.Distant?>
<?import javafx.scene.effect.Lighting?>
<?import javafx.scene.effect.Shadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="450.0" prefWidth="800.0" style="-fx-background-color: f4e55c;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ooprpg.controller.LoseController">
    <children>
        <Button fx:id="buttonNewGame" layoutX="342.0" layoutY="284.0" mnemonicParsing="false" onAction="#newGameClicked" prefHeight="42.0" prefWidth="117.0" style="-fx-background-radius: 10;" text="New game">
         <font>
            <Font name="Comic Sans MS Bold" size="15.0" />
         </font>
         <effect>
            <Lighting diffuseConstant="1.78" surfaceScale="0.0">
               <bumpInput>
                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant>
                     <color>
                        <Color red="0.9333333373069763" green="0.615686297416687" blue="0.3843137323856354" />
                     </color>
                  </Light.Distant>
               </light>
            </Lighting>
         </effect></Button>
        <Text layoutX="195.0" layoutY="211.0" strokeType="OUTSIDE" strokeWidth="0.0" text="YOU LOSE!!!">
         <font>
            <Font name="Comic Sans MS Bold" size="72.0" />
         </font></Text>
        <Button fx:id="buttonExit" layoutX="342.0" layoutY="348.0" mnemonicParsing="false" onAction="#exitClicked" prefHeight="42.0" prefWidth="117.0" style="-fx-background-radius: 10;" text="Exit">
         <font>
            <Font name="Comic Sans MS Bold" size="15.0" />
         </font>
         <effect>
            <Lighting diffuseConstant="1.78" surfaceScale="0.0">
               <bumpInput>
                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant>
                     <color>
                        <Color red="0.9333333373069763" green="0.615686297416687" blue="0.3843137323856354" />
                     </color>
                  </Light.Distant>
               </light>
            </Lighting>
         </effect></Button>
    </children>
</AnchorPane>
